@model WebCadastrador.ViewModels.ClientesViewModel
@using WebCadastrador.Models
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Clientes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sobrenome" class="control-label"></label>
                <input asp-for="Sobrenome" class="form-control" />
                <span asp-validation-for="Sobrenome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPF" class="control-label"></label>
                <input asp-for="CPF" class="form-control" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endereco" class="control-label">Endereço</label>
                <input asp-for="Endereco" class="form-control" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idade" class="control-label"></label>
                <input asp-for="Idade" class="form-control" />
                <span asp-validation-for="Idade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="estadoCivil" class="control-label"></label>
                <div>
                    @Html.RadioButtonFor(m => m.estadoCivil, EstadoCivil.Solteiro)
                    <span>@EstadoCivil.Solteiro</span>
                    @Html.RadioButtonFor(m => m.estadoCivil, EstadoCivil.Casado)
                    <span>@EstadoCivil.Casado</span>
                    @Html.RadioButtonFor(m => m.estadoCivil, EstadoCivil.Divorciado)
                    <span>@EstadoCivil.Divorciado</span>
                </div>
                <span asp-validation-for="estadoCivil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model IEnumerable<WebCadastrador.Models.Produto>
@{
    ViewData["Title"] = "Home Page";
}


<html>
<head>
</head>
<body>
    <h1>Bem vindx ao webcadastrador</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    Imagem do Produto
                </th>
                <th>
                    Detalhes do Produto
                </th>
                <th>
                    Adicionar ao Carrinho
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Preco)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @Html.DisplayFor(model => item.Nome)
                    </th>
                    <td>
                        <img src="@item.FotoUrl" asp-append-version="true" />
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                    </td>
                    <td>
                        <form asp-controller="Carrinho" asp-action="AddToCart" asp-route-id="@item.Id" method="post" class="addLink">
                            <a onclick="$(this).closest('form').submit()" href="#">Adicionar</a>
                        </form>
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Preco)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>